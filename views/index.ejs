<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <!-- Google Font-->
    <!-- <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Font+Name"> -->


    <style>
        .workingContainer {
            height: 600px;
            border-width: 1px;
            border-radius: 0.25rem;
            border-style: solid;
            background-color: whitesmoke;
        }

        .white_board {
            height: 500px;
            border: 1px dashed rgb(0, 98, 255);

        }

        .memeimage {
            width: 100px;
        }

        .memeimage:hover {
            opacity: 0.3;
            cursor: pointer;
        }
    </style>
    <meta http-equiv="refresh" content="100000">
</head>

<body>
    <header>
        <div class="collapse bg-dark" id="navbarHeader">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-md-7 py-4">
                        <h4 class="text-white">迷因吧 meme bar</h4>
                    </div>
                    <div class="col-sm-4 offset-md-1 py-4">
                        <h4 class="text-white">Contact</h4>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-white">link1</a></li>
                            <li><a href="#" class="text-white">link2</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a href="#" class="navbar-brand d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor"
                        stroke-linecap="round" stroke-linejoin="round" stroke-width="2" aria-hidden="true" class="me-2"
                        viewBox="0 0 24 24">
                        <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z" />
                        <circle cx="12" cy="13" r="4" />
                    </svg>
                    <strong>迷因吧 meme bar</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader"
                    aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </header>
    <main>

        <div class="container">
            <div class="row justify-content-center align-items-center g-2">
                <div class="col">
                    <div class="wrapper">
                        <div class="workingContainer">
                            <a name="addText" id="addText" class="btn btn-primary" href="#" role="button">Add Text</a>
                            <a name="addImage" id="addImage" class="btn btn-primary" href="#" role="button">Add
                                Image</a>
                            <div class="imageList container">
                                <img src="image/meme1.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme2.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme3.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme4.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme5.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme6.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme7.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme8.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme9.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme10.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme11.jpg" class="img-thumbnail memeimage">
                                <img src="image/meme12.jpg" class="img-thumbnail memeimage">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="wrapper">
                        <div class="workingContainer wb-wrapper ">
                            <canvas id="white_board" width="400" height="500" class="white_board" ></canvas>
                            <button type="button" name="" id="exportJPG" class="btn btn-primary">滙出JPG</button>
                        </div>

                    </div>
                </div>
                <div class="col">
                    <div class="wrapper">
                        <div class="workingContainer">


                            <div class="mb-3">
                                <label for="" class="form-label">字型選擇</label>
                                <select class="form-select form-select-lg" name="" id="fontFamilyOpt">
                                    <option selected value="default">系統字體</option>
                                    <option value="標楷體">標楷體</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="" class="form-label">字體大小</label>
                                <select class="form-select form-select-lg" name="" id="fontSizeOpt">
                                    <option selected value="15">小</option>
                                    <option value="30">中</option>
                                    <option value="45">大</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="" class="form-label">字體顏色</label>

                                <!-- Hover added -->
                                <div class="list-group">
                                    <button type="button" class="fontColorOpt list-group-item list-group-item-action"
                                        zcolor="black">黑色</button>
                                    <button type="button" class="fontColorOpt list-group-item list-group-item-action"
                                        zcolor="white">白色</button>
                                    <button type="button" class="fontColorOpt list-group-item list-group-item-action"
                                        zcolor="yellow">黃色</button>
                                </div>
                            </div>

                            <button type="button" class="btn btn-primary" id="delText">刪除</button>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <!-- place footer here -->
        footer
    </footer>

    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"
        integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
    <!-- fabric -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.3.1/fabric.js"></script>

    <!-- memebar  -->
    <script src="js/memebar.js"></script>
</body>

</html>